<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd" >
<configuration>
	
	<settings>
		<setting name="jdbcTypeForNull" value="NULL"/>
		<setting name="logImpl" value="LOG4J"/> <!--; logImpl : 로그임플리먼트. log파일이 계속 쌓이면 용량이 너무 커져서-->
	<!-- 																	   ▽
		마이바티스의 쿼리문, 파라미터값, 실행결과를 로그를 통해 확인하기 위한 셋팅. (실제 운영환경에서는 빼줘야한다.)
	 -->
 	 	<setting name="mapUnderscoreToCamelCase" value="false"/> 
	 	<!-- <setting name="mapUnderscoreToComelCase" value="true"/> --> 
	 	<!-- 언더스코어가 들어간 칼럼명을 자동으로 카멀케이스로 변경해주는 셋팅 -->
	</settings>

	<typeAliases>
		<typeAlias type="org.springframework.security.core.authority.SimpleGrantedAuthority" alias="simpleGrantedAuthority"/>
		<!-- com.kh.spring 하위의 모든 클래스를 소문자로 시작하는 별칭으로 등록함
			ex) Member -> member -->
		<package name="com.kh.spring"/>
	</typeAliases>
	
	<!-- environments, dataSource에 기술했던 DB연결정보는 root-context.xml에 작성할 예정.
		 -> DB등록은 서버시작과 동시에 이루어져야하기 때문에 서버연결과 동시에 얽혀지는 root-context.xml에 기술할 예정이다.
	 -->

</configuration>
